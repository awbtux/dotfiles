pcm.dmixer {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:1,0"
        period_time 0
        period_size 1024
        buffer_size 4096
    }
    bindings {
        0 0
        1 1
    }
}

ctl.dmixer {
    type hw
    card 0
}

pcm.mixin {
    type dsnoop
    ipc_key 5978293
    ipc_key_add_uid yes
    slave {
        pcm "hw:0,0"
        channels 2
        period_size 1024
        buffer_size 4096
        periods 0 
        period_time 0
    }
    bindings {
        0 0
        0 1
    }
}

pcm.plugeq {
    type equal
    slave.pcm "plug:dmix"
    controls {
        @func concat
        strings [
            {
                @func getenv
                vars [ "XDG_CONFIG_HOME" ]
                default "~/.config"
            }
            "/alsa/eq_out.bin"
        ]
    }
}

ctl.eq {
    type equal
    controls {
        @func concat
        strings [
            {
                @func getenv
                vars [ "XDG_CONFIG_HOME" ]
                default "~/.config"
            }
            "/alsa/eq_out.bin"
        ]
    }
}

pcm.plugeq-in {
    type equal
    slave.pcm "plug:dsnoop"
    controls {
        @func concat
        strings [
            {
                @func getenv
                vars [ "XDG_CONFIG_HOME" ]
                default "~/.config"
            }
            "/alsa/eq_in.bin"
        ]
    }
}

ctl.eq-in {
    type equal
    controls {
        @func concat
        strings [
            {
                @func getenv
                vars [ "XDG_CONFIG_HOME" ]
                default "~/.config"
            }
            "/alsa/eq_in.bin"
        ]
    }
}

pcm.!default {
    type asym
    playback.pcm {
        type plug
        #slave.pcm "dmixer"
        slave.pcm "plugeq"
    }
    capture.pcm {
        type plug
        #slave.pcm "dsnoop"
        slave.pcm "plugeq-in"
    }
}
