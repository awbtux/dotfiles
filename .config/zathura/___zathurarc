# general behavior
set window-width 1024
set window-height 640
set database plain
set dbus-service false
set dbus-raise-window false
set page-padding 8
set scroll-step 64
set window-title-page true
set zoom-center true
set font "${theme_font_monospace} 9"
set selection-clipboard clipboard

# page recoloring
set recolor-keephue "true"

# key mappings
map [normal] f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map [normal] i recolor
map [fullscreen] i recolor
