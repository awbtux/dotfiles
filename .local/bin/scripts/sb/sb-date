#!/bin/sh

# status bar module printing the date/time in my preferred format

# load shell functions
[ -r "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions" ] && . "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions"

# require the date command
require-cmd date || exit 127

# do the thing
date +'%a, %b %d %Y, %I:%M:%S %p %Z'
