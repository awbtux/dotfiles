#!/bin/sh

# wrapper around `elinks` for post-usage cleanup

# load shell functions
[ -r "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions" ] && . "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions"

# we need these
require-cmd syspath rm || exit 127

# find the system's elinks and run it
syspath elinks "$@"

# clean up the junk 'random seed' file
rm -rf "$HOME/.rnd"
