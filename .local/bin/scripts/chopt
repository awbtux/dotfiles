#!/bin/sh

# ask the user to provide an option that overrides a specified default

# need title
test ! -n "$1" && printf "${0##*/}: error: No prompt provided\n" && exit 1

# print it
printf "\033[1m%s\033[22m%s " "$1" "${2:+ [$2]}" >&2

# do thing
read userch
test -n "$userch" && printf "$userch" && return 0
test -n "$2" && printf "$2"
