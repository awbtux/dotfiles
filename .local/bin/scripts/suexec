#!/bin/sh

# run a command as root using 'su' (fallback, not preferred)

# load shell functions
[ -r "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions" ] && . "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functions"

# drop-in replacement for the 'sudo' command
# for when neither it nor doas are available
require-cmd su || exit 127

# run the command and return its args
su -c "$@"
exit $?
